<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_background"
    tools:context=".view.InsertProductActivity">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="0dp"
        android:layout_height="181dp"
        android:background="@color/brown"
        android:contentDescription="@string/kouvee_pet_shop_logo"
        android:src="@drawable/kouve_mobile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/product_name"
        android:textColor="@color/olive_green"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view" />

    <TextView
        android:id="@+id/tv_product_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/product_quantity"
        android:textColor="@color/olive_green"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name" />

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/product_price"
        android:textColor="@color/olive_green"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_quantity" />

    <TextView
        android:id="@+id/tv_product_measurement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/product_measurement"
        android:textColor="@color/olive_green"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_minimum_qty" />

    <TextView
        android:id="@+id/tv_product_minimum_qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/minimum_quantity"
        android:textColor="@color/olive_green"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_price" />

    <TextView
        android:id="@+id/tv_product_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/product_image"
        android:textColor="@color/olive_green"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_measurement" />

    <EditText
        android:id="@+id/edt_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="@string/product_name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_product_name"
        app:layout_constraintTop_toTopOf="@+id/tv_product_name" />

    <EditText
        android:id="@+id/edt_product_measurement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/product_measurement"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product_measurement"
        app:layout_constraintEnd_toEndOf="@+id/edt_minimum_qty"
        app:layout_constraintStart_toStartOf="@+id/edt_minimum_qty"
        app:layout_constraintTop_toTopOf="@+id/tv_product_measurement" />

    <EditText
        android:id="@+id/edt_product_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/product_quantity"
        android:inputType="numberSigned"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product_quantity"
        app:layout_constraintEnd_toEndOf="@+id/edt_product_name"
        app:layout_constraintStart_toStartOf="@+id/edt_product_name"
        app:layout_constraintTop_toTopOf="@+id/tv_product_quantity" />

    <EditText
        android:id="@+id/edt_minimum_qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/minimum_quantity"
        android:inputType="numberSigned"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product_minimum_qty"
        app:layout_constraintEnd_toEndOf="@+id/edt_product_price"
        app:layout_constraintStart_toStartOf="@+id/edt_product_price"
        app:layout_constraintTop_toTopOf="@+id/tv_product_minimum_qty" />

    <EditText
        android:id="@+id/edt_product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/product_price"
        android:inputType="numberSigned"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product_price"
        app:layout_constraintEnd_toEndOf="@+id/edt_product_quantity"
        app:layout_constraintStart_toStartOf="@+id/edt_product_quantity"
        app:layout_constraintTop_toTopOf="@+id/tv_product_price" />

    <TextView
        android:id="@+id/tv_image_path"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/image_path"
        android:textColor="@color/olive_green"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product_image"
        app:layout_constraintEnd_toStartOf="@+id/btn_file"
        app:layout_constraintStart_toEndOf="@+id/tv_product_image"
        app:layout_constraintTop_toTopOf="@+id/tv_product_image" />

    <Button
        android:id="@+id/btn_file"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/olive_green"
        android:text="@string/file"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tv_image_path"
        app:layout_constraintEnd_toEndOf="@+id/edt_product_measurement"
        app:layout_constraintTop_toTopOf="@+id/tv_image_path" />

    <Button
        android:id="@+id/btn_insert"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/olive_green"
        android:text="@string/insert"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_file"
        app:layout_constraintStart_toStartOf="@+id/tv_product_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_image_path" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>